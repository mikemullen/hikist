<% if signed_in? %>
  <div class="row">
  	<aside class="span4">
  	  <section>
  	  	<%= render 'shared/user_info' %>
  	  </section>
      <section>
        <%= render 'shared/followstats' %>
      </section>
  	  <section>
  	  	<%= link_to "Create New Hikelog!", new_hikelog_path,
                      class: "btn btn-large btn-primary" %>
  	  </section>
  	</aside>
    <div class="span7">
      <h3>Hikes</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>Welcome to Hikist</h1>
  <p>Hikist is your place to archive, share and discover hikes.</p>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<% end %>