<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
  	<section>
  	  <h1>
  		<%= gravatar_for @user %>
  		<%= @user.name %>
	  </h1>
  	</section>
  </aside>
  <div class="span8">
  	<% if @user.hikelogs.any? %>
  	  <h3>Hikes (<%= @user.hikelogs.count %>)</h3>
  	  <ol class="hikelogs">
  	  	<%= render @hikelogs %>
  	  </ol>
  	  <%= will_paginate @hikelogs %>
  	<% end %>
  </div>
</div>